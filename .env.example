# .env.example (для демо-репозитория)

APP_NAME="MyCRM Demo"
APP_ENV=demo
APP_DEBUG=false
APP_URL=http://localhost:8000

# Используйте SQLite для простоты
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# или используйте mysql
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=sail
DB_PASSWORD=password

# Почта в демо-режиме не отправляется
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="demo@example.com"
MAIL_FROM_NAME="TurboCRM Demo"

# Telegram в демо-режиме не работает
TELEGRAM_BOT_TOKEN=demo_token
TELEGRAM_CHAT_ID=0
